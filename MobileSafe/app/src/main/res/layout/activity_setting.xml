<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhli.mobilesafe.SettingActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:text="设置中心"
        android:textSize="22sp"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/textView1"
        android:background="#8866FF00"/>

    <com.example.zhli.mobilesafe.ui.SettingItemView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/siv_update">
    </com.example.zhli.mobilesafe.ui.SettingItemView>

    <com.example.zhli.mobilesafe.ui.SettingShowNumberAddressView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/showNumberAddress">
    </com.example.zhli.mobilesafe.ui.SettingShowNumberAddressView>

    <com.example.zhli.mobilesafe.ui.SettingClickView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scv_changebg">
    </com.example.zhli.mobilesafe.ui.SettingClickView>

    <com.example.zhli.mobilesafe.ui.SettingBlackNumberView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sbnv_callsms_safe">
    </com.example.zhli.mobilesafe.ui.SettingBlackNumberView>

    <com.example.zhli.mobilesafe.ui.SettingWatchdogView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swv_watchdog">
    </com.example.zhli.mobilesafe.ui.SettingWatchdogView>
</LinearLayout>
