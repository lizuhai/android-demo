<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.zhli.mobilesafe.LostFindActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dip"
        android:text="手机防盗"
        android:textSize="22sp"
        android:textColor="#000000"
        android:gravity="center"
        android:id="@+id/textView1"
        android:background="#8866FF00"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:id="@+id/tv_safenumber"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxxx"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"/>
        </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防盗保护是否开启"
            android:textColor="#000000"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"/>
        <ImageView
            android:id="@+id/iv_protecting"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/unlock"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"/>

    <TextView
        android:background="@drawable/shape_selector"
        android:clickable="true"
        android:onClick="reEnterSetup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="重新进入设置向导"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"/>
    <View
        android:layout_marginTop="5dp"
        android:background="#44000000"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"/>

    <TextView
        android:background="#44000000"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="功能简介"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"/>
    <TextView
        style="@style/text_content_style"
        android:text="GPS 追踪：#*location*#"
        android:drawableLeft="@android:drawable/star_big_on"/>
    <TextView
        style="@style/text_content_style"
        android:text="播放报警音乐：#*alarm*#"
        android:drawableLeft="@android:drawable/star_big_on"/>
    <TextView
        style="@style/text_content_style"
        android:text="远程删除数据：#*wipedata*#"
        android:drawableLeft="@android:drawable/star_big_on"/>
    <TextView
        style="@style/text_content_style"
        android:text="远程锁屏：#*lockscreen*#"
        android:drawableLeft="@android:drawable/star_big_on"/>

</LinearLayout>
